<h1>Send your picture</h1>
<%= form_tag "/user_picture/send_mail", method: 'post' do %>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <%= label_tag "Email address:" %>
    <%= text_field_tag 'email_address' %>
    <%= label_tag "Message body:" %>
    <%= text_area_tag "message_body" %>
    <p>A link to your picture will be included in the email.</p>
    <%= submit_tag "Send picture" %>
<% end %>
